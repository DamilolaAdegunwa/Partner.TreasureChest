@model IEnumerable<Ingenuity.Web.Models.WorkingProductInfo>

@{
    ViewData["Title"] = "物料清单材料在制品列表";
}

<h2>物料清单材料在制品列表</h2>
<table class="table">
    <thead>
        <tr>
            <th>零件名称</th>
            <th>材料名称</th>
            <th>材料目标数量</th>
            <th>材料完成数量</th>
            <th>差额数量</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AimCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DifferCount)
                </td>
            </tr>
        }
        @if (Model == null || Model.Count() == 0)
        {
            <tr>
                <td class="text-center" colspan="5"><label style="color:red;font-weight:bold;">暂无数据！</label></td>
            </tr>
        }
    </tbody>
</table>
